<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <changeSet id="008-createTableBudget" author="Rodion Tkachenko">
        <createTable tableName="budget" schemaName="tracker">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="total_amount" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="spent_amount" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="period_start" type="DATE">
                <constraints nullable="true"/>
            </column>
            <column name="period_end" type="DATE">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableSchemaName="tracker"
                                 baseTableName="budget"
                                 baseColumnNames="user_id"
                                 constraintName="fk_budget_user_id"
                                 referencedTableName="user"
                                 referencedTableSchemaName="tracker"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>

        <addForeignKeyConstraint baseTableSchemaName="tracker"
                                 baseTableName="budget"
                                 baseColumnNames="category_id"
                                 constraintName="fk_budget_category_id"
                                 referencedTableName="transaction_category"
                                 referencedTableSchemaName="tracker"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
    </changeSet>
</databaseChangeLog>